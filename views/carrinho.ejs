<!DOCTYPE html>
<html lang="pt-br">

<head>
    <!-- Meta tags necessarias ao funcionamento do bootstrap -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/fdb2e39f6f.js" crossorigin="anonymous"></script>

    <!-- Estilo customizado -->
    <link rel="stylesheet" href="./cardapio.css">

    <title> Carrinho - Mais Sabor</title>

    <!-- Logo da barra de enderecos do navegador -->
    <link rel="icon" href="/images/logo.png">
</head>

<body>

    <header>
        <!-- inicio CABECALHO-->
        <nav class="navbar navbar-light navbar-expand-md fixed-top bg-vermelho navbar-transparente shadow">
            <div class="container">
    
                <!-- logo -->
                <a href="#" class="navbar-brand">
                    <img src="/images/logo.png" width="100">
                </a>
    
                <!-- menu hamburguer -->
                <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
                    <span class="navbar-toggler-icon"></span>
                </button>
    
                <!-- menu navegacao -->
                <div class="collapse navbar-collapse" id="nav-principal">
                    <ul class="navbar-nav ml-auto">
    
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
    
                        <li class="nav-item">
                            <a class="nav-link" href="/quem_somos">Quem Somos</a>
                        </li>
    
                        <li class="nav-item">
                            <a class="nav-link" href="/contato">Contato</a>
                        </li>
    
                        <li class="nav-item divisor"></li><!-- divisor -->
    
                        <li class="nav-item">
                            <a href="/cardapio" class="nav-link">Cardápio</a>
                        </li>
    
                        <li class="nav-item">
                            <a href="" class="nav-link active">
                                <i class="fas fa-shopping-cart fa-lg"></i>
                                <span class="badge badge-secondary">2</span>
                            </a>
                        </li>
    
                    </ul>
                </div>
    
            </div>
        </nav>
    </header>
    <!--/fim CABECALHO-->

    <section id="home">
        <!-- inicio HOME -->
        <div class="container">
            <div class="row">

                <div class="col-md-12">

                    <div class="titulo-home">
                        <h2>Carrinho</h2>
                        <img src="images/red-header-seprator.png" alt="">
                    </div>

                    <div class="table-reponsive">
                        <table class="table">
                            <thead class="table-light">
                                <th></th>
                                <th>ID</th>
                                <th>Descrição</th>
                                <th>Preço</th>
                                <th>Quant</th>
                                <th></th>
                            </thead>

                            <tbody>

                                <!-- produto 1 -->
                                <tr>
                                    <td class="td-img">
                                        <!-- imagem -->
                                        <img class="img-fluid" src="/images/calabresa.png" alt="Calabresa">
                                    </td>
                                    <td class="d-none d-sm-block">
                                        <!-- ID -->
                                        1
                                    </td>
                                    <td>
                                        <!-- descricao -->
                                        <h5>Pizza de Calabresa</h5>
                                        <p>Calabresa, mussarela e cebola</p>
                                    </td> <!-- preco -->
                                    <td>G - R$ 39,99</td>
                                    <td>
                                        <!-- quant -->
                                        <input type="number" value="1" min="0" max="99" step="1" />
                                    </td>
                                    <td>
                                        <!-- remover -->
                                        <button class="btn btn-danger btn">
                                            <span>Remover do carrinho</span>
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>

                                <!-- produto 2 -->
                                <tr>
                                    <td class="td-img">
                                        <!-- imagem -->
                                        <img class="img-fluid" src="/images/presunto.png" alt="Presunto">
                                    </td>
                                    <td class="d-none d-sm-block">
                                        <!-- ID -->
                                        2
                                    </td>
                                    <td>
                                        <!-- descricao -->
                                        <h5>Pizza de Presunto</h5>
                                        <p>Presunto, mussarela e orégano</p>
                                    </td> <!-- preco -->
                                    <td>G - R$ 39,99</td>
                                    <td>
                                        <!-- quant -->
                                        <input type="number" value="1" min="0" max="99" step="1" />
                                    </td>
                                    <td>
                                        <!-- remover -->
                                        <button class="btn btn-danger">
                                            <span>Remover do carrinho</span>
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>

                            </tbody>

                            <!-- total -->
                            <tr>
                                <td colspan="3"></td>
                                <td>
                                    <h4>Total</h4>
                                </td>
                                <td colspan="1"></td>
                                <td>
                                    <h3>R$ 79,98</h3>
                                </td>
                            </tr>

                            <!-- botoes -->
                            <tr>
                                <td>
                                    <button class="btn btn-success">
                                        <span>Comprar mais</span>
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                </td>
                                <td colspan="4"></td>
                                <td>
                                    <button class="btn btn-primary">
                                        <span>Finalizar a compra</span>
                                        <i class="fas fa-check"></i>
                                    </button>
                                </td>
                            </tr>

                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </section>
    <!--/fim HOME -->

    <%- include ('partials/footer.ejs') %>
</body>

</html>